<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/find_map"
                android:layout_margin="10dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="지도에서 확인"/>

            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/select_region_button_close"
                android:background="@drawable/home_button_style"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="처음 화면으로"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:drawableLeft="@drawable/home"
                android:paddingLeft="12dp"
                android:textSize="20sp" />

        </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/seoul"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/seoul"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/busan"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/busan"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/daegu"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/daegu"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/incheon"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/incheon"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/gwanju"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/gwanju"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/daejeon"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/daejeon"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ulsan"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ulsan"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/sejong"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/sejong"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/gyeonggi"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/gyeonggi"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/gangwon"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/gangwon"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/chungbuk"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/chungcheongbuk"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/chungnam"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/chungcheongnam"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/jeollabuk"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/jeollabuk"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/jeollanam"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/jeollanam"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/gyeongbuk"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/gyeongsangbuk"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/gyeongnam"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/gyeongsangnam"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/jeju"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/jeju"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:background="#FFF"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>