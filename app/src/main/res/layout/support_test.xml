<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:lineSpacingExtra="3dp"
                android:text="본인에게 해당되는 정부지원금을 추천해드리기 위한 설문지입니다.\n질문에 해당되는 사항에 체크해 주시기 바랍니다."
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="▷ 아이가 몇 명 인가요?" />

                <RadioGroup
                    android:paddingTop="6dp"
                    android:id="@+id/support_test_raG1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <RadioButton
                        android:id="@+id/support_test_rBt1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0명" />

                    <RadioButton
                        android:id="@+id/support_test_rBt1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1명" />

                    <RadioButton
                        android:id="@+id/support_test_rBt1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2명" />

                    <RadioButton
                        android:id="@+id/support_test_rBt1_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3명 이상" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="▷ 실직 상태인가요?" />

                <RadioGroup
                    android:paddingTop="6dp"
                    android:id="@+id/support_test_raG2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <RadioButton
                        android:id="@+id/support_test_rBt2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="네" />

                    <RadioButton
                        android:id="@+id/support_test_rBt2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아니오" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="▷ 졸업 후 2년 내에 취업을 하지 못했나요?" />

                <RadioGroup
                    android:paddingTop="6dp"
                    android:id="@+id/support_test_raG3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <RadioButton
                        android:id="@+id/support_test_rBt3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="네" />

                    <RadioButton
                        android:id="@+id/support_test_rBt3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아니오" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/support_test_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="선택 완료" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>